<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <CalendarView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/calendarView"
            tools:layout_editor_absoluteX="30dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" android:background="#FFFFFF"
            android:backgroundTint="#FFFFFF" android:foregroundTint="#FFFFFF" android:focusedMonthDateColor="#FFFFFF"
            android:selectedWeekBackgroundColor="#07950D"/>

</androidx.constraintlayout.widget.ConstraintLayout>